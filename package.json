{
  "name": "nc-cardinal-manga",
  "private": true,
  "type": "module",
  "scripts": {
    "api": "pnpm --filter @repo/api dev",
    "app": "pnpm --filter @repo/app dev",
    "native": "pnpm --filter @repo/native dev",
    "ios": "pnpm --filter @repo/native ios",
    "android": "pnpm --filter @repo/native android",
    "build": "turbo build",
    "typecheck": "turbo typecheck",
    "lint": "eslint apps/ packages/",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,cjs,mjs,json,md,css}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint-community/eslint-plugin-eslint-comments": "^4.6.0",
    "@eslint-react/eslint-plugin": "^2.7.2",
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3",
    "turbo": "^2",
    "typescript": "^5",
    "typescript-eslint": "^8.53.0"
  },
  "packageManager": "pnpm@9.15.4"
}
